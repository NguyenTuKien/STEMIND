# =============================================================================
# STEMIND - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp env.example .env

# =============================================================================
# DJANGO SETTINGS
# =============================================================================
DEBUG=True
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL (Recommended)
DATABASE_URL=postgresql://stemind_user:your_password@localhost:5432/stemind_db

# MySQL Alternative
# DATABASE_URL=mysql://stemind_user:your_password@localhost:3306/stemind_db

# SQLite (Development only)
# DATABASE_URL=sqlite:///db.sqlite3

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# AWS S3 CONFIGURATION (Optional)
# =============================================================================
# Uncomment and configure if using AWS S3 for file storage
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=ap-southeast-1
# AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.com
# AWS_S3_OBJECT_PARAMETERS={'CacheControl': 'max-age=86400'}
# AWS_DEFAULT_ACL=public-read
# AWS_QUERYSTRING_AUTH=False

# =============================================================================
# OPENAI CONFIGURATION (Required for Chatbot)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL_NAME=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Gmail SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Alternative: SendGrid
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=your-sendgrid-api-key

# Alternative: AWS SES
# EMAIL_HOST=email-smtp.ap-southeast-1.amazonaws.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-ses-smtp-username
# EMAIL_HOST_PASSWORD=your-ses-smtp-password

# =============================================================================
# STRIPE PAYMENT CONFIGURATION (Optional)
# =============================================================================
# Uncomment and configure if using Stripe for payments
# STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
# STRIPE_SECRET_KEY=sk_test_your-secret-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================================================
# SOCIAL AUTHENTICATION (Optional)
# =============================================================================
# Google OAuth2
# GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
# GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth2
# FACEBOOK_APP_ID=your-facebook-app-id
# FACEBOOK_APP_SECRET=your-facebook-app-secret

# GitHub OAuth2
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# ELASTICSEARCH CONFIGURATION (Optional)
# =============================================================================
# Uncomment and configure if using Elasticsearch for search
# ELASTICSEARCH_HOST=localhost
# ELASTICSEARCH_PORT=9200
# ELASTICSEARCH_USERNAME=
# ELASTICSEARCH_PASSWORD=
# ELASTICSEARCH_USE_SSL=False

# =============================================================================
# SENTRY CONFIGURATION (Optional)
# =============================================================================
# Uncomment and configure if using Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=development

# =============================================================================
# GOOGLE ANALYTICS (Optional)
# =============================================================================
# Uncomment and configure if using Google Analytics
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_ACCEPT_CONTENT=['json']
CELERY_TASK_SERIALIZER='json'
CELERY_RESULT_SERIALIZER='json'
CELERY_TIMEZONE=Asia/Ho_Chi_Minh

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_BACKEND=django_redis.cache.RedisCache
CACHE_LOCATION=redis://localhost:6379/1
CACHE_OPTIONS={
    "CLIENT_CLASS": "django_redis.client.DefaultClient",
}

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_ENGINE=django.contrib.sessions.backends.cache
SESSION_CACHE_ALIAS=default

# =============================================================================
# SECURITY SETTINGS (Production)
# =============================================================================
# Uncomment these for production deployment
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# SECURE_BROWSER_XSS_FILTER=True
# SECURE_FRAME_DENY=True
# X_FRAME_OPTIONS=DENY

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# LOG_LEVEL=INFO
# LOG_FILE=/var/log/stemind/django.log

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to True for development, False for production
DEVELOPMENT_MODE=True

# Django Debug Toolbar (Development only)
# DEBUG_TOOLBAR=True

# Django Silk (Performance profiling)
# SILK_ENABLED=True

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit .env file to version control
# 2. Keep your SECRET_KEY secure and unique
# 3. Use strong passwords for database and services
# 4. Enable HTTPS in production
# 5. Regularly update dependencies and security patches
# 6. Monitor logs and performance metrics
# 7. Backup database regularly
# 8. Test thoroughly before deploying to production
